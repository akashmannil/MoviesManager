@model MoviesManager.Models.Movie
@{
    ViewData["Title"] = "Delete Movie";
}

<h2>@ViewData["Title"]</h2>
<hr />
<h4>Are you sure you want to delete this movie?</h4>
<div style="border:1px solid black; border-radius:5px; padding:1rem; margin: 2rem 0;
line-height:2rem;">
    <strong>@Model.Title</strong> (Directed by @Model.Director, @Model.Year) <br />
    <em>@Model.Genre</em> - Rating: @Model.Rating <br />
    Cast: @Model.Cast
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
